<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or "Borderline" }}</title>
    <meta
      name="description"
      content="{{ description or 'Guess countries and territories from their outlines in Borderline, a fast-paced geography game with multiple difficulty levels, full world coverage, and score-based challenges.' }}"
    />
    <link rel="stylesheet" href="/assets/css/site.css" />
    
    <!-- Favicons & Apple Touch Icons -->
    <link rel="apple-touch-icon" sizes="60x60" href="/apple-touch-icon-iphone-60x60.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-touch-icon-ipad-76x76.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon-iphone-retina-120x120.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon-ipad-retina-152x152.png">
    <!-- Fallback for generic apple-touch-icon -->
    <link rel="apple-touch-icon" href="/apple-touch-icon-ipad-retina-152x152.png">

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
  </head>
  <body>
    <header>
      <div>
        <div>
          <a href="/" class="logo">
            <img
              src="/assets/images/borderline_logo_no_background.png"
              alt="Borderline"
            />
          </a>
        </div>
      </div>
      
      <button class="hamburger" aria-label="Toggle navigation">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <nav>
        {% if not hideHomeLink %}
          <a href="/">Home</a>
        {% endif %}       
        {% if not hideInstructionsLink %}
          <a href="/instructions/">Instructions</a>
        {% endif %} 
        {% if not hideWhyBorderlineLink %}
          <a href="/why-borderline/">Why Borderline?</a>
        {% endif %}
      </nav>

      <script>
        document.querySelector('.hamburger').addEventListener('click', function() {
          this.classList.toggle('active');
          document.querySelector('nav').classList.toggle('active');
        });
      </script>
    </header>

    <main class="{% if fullWidth %}full-width{% else %}content-container{% endif %}">
      {{ content | safe }}
    </main>

    <footer class="muted">
      <span>Â© {% year %} Enjoy Software</span>
      <div class="links">
        <a href="/privacy/">Privacy Policy</a>
        <a href="/terms/">Terms of Service</a>
      </div>
    </footer>
  </body>
</html>
