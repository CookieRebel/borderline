<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title or "Borderline" }}</title>
    <meta
      name="description"
      content="{{ description or 'Guess countries and territories from their outlines in Borderline, a fast-paced geography game with multiple difficulty levels, full world coverage, and score-based challenges.' }}"
    />
    <link rel="stylesheet" href="/assets/css/site.css" />
  </head>
  <body>
    <header>
      <div>
        <div>
          <a href="/" class="logo">
            <img
              src="/assets/images/borderline_logo_no_background.png"
              alt="Borderline"
              height="32"
            />
          </a>
        </div>
        <p class="text-muted mb-0 text-small">
          Guess the country or territory from its shape
        </p>
      </div>
      
      <button class="hamburger" aria-label="Toggle navigation">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <nav>
        {% if not hideHomeLink %}
          <a href="/">Home</a>
        {% endif %}       
        {% if not hideInstructionsLink %}
          <a href="/instructions/">Instructions</a>
        {% endif %} 
        {% if not hideWhyBorderlineLink %}
          <a href="/why-borderline/">Why Borderline?</a>
        {% endif %}
      </nav>

      <script>
        document.querySelector('.hamburger').addEventListener('click', function() {
          this.classList.toggle('active');
          document.querySelector('nav').classList.toggle('active');
        });
      </script>
    </header>

    <main class="{% if fullWidth %}full-width{% else %}content-container{% endif %}">
      {{ content | safe }}
    </main>

    <footer class="muted">
      <span>Â© {% year %} Enjoy Software</span>
      <div class="links">
        <a href="/privacy/">Privacy Policy</a>
        <a href="/terms/">Terms of Service</a>
      </div>
    </footer>
  </body>
</html>
